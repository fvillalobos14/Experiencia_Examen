<h1>Locations</h1>
 <%= link_to 'Home', controller: 'locations' %>
 <%= link_to "New Location", new_location_path %>
<table>
  <tr>
    <th>Name</th>
  </tr>
 
  <% @locations.each do |location| %>
    <tr>
      <td><%= location.name %></td>
      <td><%= render location.recordings %></td>
      <td><%= link_to 'Show', location_path(location) %></td>
      <td><%= link_to 'Edit', edit_location_path(location) %></td>
      <td><%= link_to 'Destroy', location_path(location),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this Location?' } %></td>
    </tr>
  <% end %>
</table>